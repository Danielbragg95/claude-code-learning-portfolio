{
  "name": "claude-code-learning-portfolio",
  "version": "1.0.0",
  "description": "A stunning portfolio website showcasing AI-assisted coding journey with Claude Code",
  "main": "index.html",
  "scripts": {
    "dev": "python -m http.server 8000",
    "start": "npm run dev",
    "build": "npm run optimize && npm run minify",
    "optimize": "node scripts/optimize.js",
    "minify": "node scripts/minify.js",
    "deploy": "npm run build && gh-pages -d .",
    "deploy-vercel": "vercel --prod",
    "deploy-netlify": "netlify deploy --prod --dir=.",
    "preview": "python -m http.server 3000",
    "test": "echo \"No tests specified yet\" && exit 0",
    "lint": "echo \"Linting HTML, CSS, JS...\" && node scripts/lint.js",
    "validate": "node scripts/validate.js",
    "audit": "npm audit && node scripts/security-audit.js",
    "backup": "git add . && git commit -m \"Backup: $(date)\" && git push",
    "setup": "npm install && npm run validate && echo \"âœ… Portfolio setup complete!\"",
    "stats": "node scripts/stats.js",
    "seo-check": "node scripts/seo-check.js",
    "lighthouse": "lighthouse http://localhost:8000 --output json --output html --output-path ./lighthouse-report",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "compress-images": "echo 'Image compression placeholder - add imagemin if needed'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/claude-code-learning-portfolio.git"
  },
  "keywords": [
    "portfolio",
    "claude-code",
    "ai-assisted-coding",
    "web-development",
    "glassmorphism",
    "pwa",
    "responsive-design",
    "interactive",
    "developer-portfolio"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/claude-code-learning-portfolio/issues"
  },
  "homepage": "https://yourusername.github.io/claude-code-learning-portfolio",
  "devDependencies": {
    "gh-pages": "^6.1.0",
    "html-minifier": "^4.0.0",
    "clean-css": "^5.3.2",
    "terser": "^5.24.0",
    "imagemin": "^8.0.1",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-mozjpeg": "^10.0.0",
    "lighthouse": "^11.4.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
